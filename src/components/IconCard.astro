---
interface Props {
  name: string;
  category: string;
  svg: string;
}

const { name, category, svg } = Astro.props;
---

<div class="group relative bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <div class="aspect-square flex items-center justify-center p-4 bg-gray-50 rounded-md mb-3">
    <Fragment set:html={svg} />
  </div>
  
  <div class="text-sm">
    <h3 class="font-medium text-gray-900">{name}</h3>
    <p class="text-gray-500">{category}</p>
  </div>

  <div class="absolute inset-0 flex items-center justify-center gap-2 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg">
    <button
      class="p-2 bg-white rounded-md hover:bg-gray-50"
      title="Copy component import"
    >
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
      </svg>
    </button>
    <button
      class="p-2 bg-white rounded-md hover:bg-gray-50"
      title="Download SVG"
    >
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
      </svg>
    </button>
  </div>
</div>