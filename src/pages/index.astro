---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';

const features = [
  {
    title: 'Easy Integration',
    description: 'Install via npm and import icons as components',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z'
  },
  {
    title: 'Copy-Paste Usage',
    description: 'Simple copy-paste functionality for quick implementation',
    icon: 'M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2'
  },
  {
    title: 'Tailwind Ready',
    description: 'Fully customizable with Tailwind CSS classes',
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4'
  },
  {
    title: 'Organized Categories',
    description: 'Icons neatly organized by category for easy discovery',
    icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'
  }
];
---

<Layout title="SVG Icon Library">
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 overflow-hidden">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-primary-600 to-purple-600 bg-clip-text text-transparent">
            Beautiful SVG Icons for Modern Web Apps
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            A carefully crafted collection of SVG icons ready to use in your next project.
            Fully customizable, accessible, and optimized for performance.
          </p>
          <div class="flex gap-4 justify-center">
            <Button size="lg" href="/icons">Browse All Icons</Button>
            <Button size="lg" variant="outline" href="/docs">
              View Documentation
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Everything You Need</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {features.map(feature => (
            <div class="bg-white p-6 rounded-lg shadow-sm">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
                <svg
                  class="w-6 h-6 text-primary-600"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d={feature.icon} />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>